<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.duy.tieuluan.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <ImageView
            android:id="@+id/sharedocument"
            android:layout_marginBottom="20sp"
            android:src="@drawable/logo_eat_it"
            android:layout_width="match_parent"
            android:layout_height="108dp" />


    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:background="@drawable/button_sign_up"
            android:layout_weight="1"
            android:text="Trà sữa"
            android:textColor="@android:color/white"
            android:id="@+id/btntrasua"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            />

        <Button
            android:background="@drawable/button_sign_in"
            android:layout_weight="1"
            android:text="mì cay"
            android:textColor="@android:color/white"
            android:id="@+id/btnmicay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            />

    </LinearLayout>

</RelativeLayout>
